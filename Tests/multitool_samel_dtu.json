{
    "WORKFLOWS": "QC, TRIMMING, MAPPING, DEDUP, DTU",  # "MAPPING, QC, DEDUP, TRIMMING, COUNTING, UCSC, PEAKS, ANNOTATE, DE, DEU, DAS"
    "BINS": "nextsnakes/scripts",
    "MAXTHREADS": "6",
    "SETTINGS": {
        "Dm6": {
            "single": {
                "bla": {
                    "SAMPLES": [
                        "Test_unpaired_R1", "Test_unpaired_R2"
                    ],
                    "GROUPS": [
                        "ONE", "ONE"
                    ],
                    "TYPES": [
                        "long", "long"
                    ],
                    "BATCHES": [
                        "1", "1"
                    ],
                    "SEQUENCING": "single",
                    "REFERENCE": "GENOMES/Dm6/dm6.fa.gz",
                    "PREFIX": "idx",
                    "ANNOTATION": {
                        "GFF": "GENOMES/Dm6/dm6.gff3.gz",
                        "GTF": "GENOMES/Dm6/dm6.gtf.gz"
                    },
                    "IP": "iCLIP"
                },
                "blubb": {
                    "SAMPLES": [
                        "GSM_paired"
                    ],
                    "GROUPS": [
                        "TWO"
                    ],
                    "TYPES": [
                        "short"
                    ],
                    "BATCHES": [
                        "2"
                    ],
                    "SEQUENCING": "paired",
                    "REFERENCE": "GENOMES/Dm6/dm6.fa.gz",
                    "PREFIX": "idx",
                    "ANNOTATION": {
                        "GFF": "GENOMES/Dm6/dm6.gff3.gz",
                        "GTF": "GENOMES/Dm6/dm6.gtf.gz"
                    },
                    "IP": "iCLIP"
                }
            }
        }
    },
    "QC": {
        "TOOLS" :
        {
            "fastqc" : "fastqc"
        },
        "Dm6": {
            "single": {
                "bla": {
                    "fastqc": {
                        "OPTIONS": [
                            {}
                        ]
                    }
                },
                "blubb": {
                    "fastqc": {
                        "OPTIONS": [
                            {}
                        ]
                    }
                }
            }
        }
    },
    "TRIMMING": {
        "TOOLS" :
        {
            "trimgalore": "trim_galore",
            "cutadapt": "cutadapt"
        },
        "Dm6": {
            "single": {
                "bla": {
                    "trimgalore": {
                        "OPTIONS": [
                            {
                                "-q": "15",
                                "--length": "8",
                                "-e": "0.15"
                            }
                        ]
                    },
                    "cutadapt": {
                        "OPTIONS": [
                            {
                                "-q": "15",
                                "-m": "8",
                                "-e": "0.15"
                            }
                        ]
                    }
                },
                "blubb": {
                    "trimgalore": {
                        "OPTIONS": [
                            {
                                "-q": "15",
                                "--length": "8",
                                "-e": "0.15"
                            }
                        ]
                    },
                    "cutadapt": {
                        "OPTIONS": [
                            {
                                "-q": "15",
                                "-m": "8",
                                "-e": "0.15"
                            }
                        ]
                    }
                }
            }
        }
    },
    "DEDUP": {
        "TOOLS": {
            "umitools": "umi_tools"
        },
        "Dm6": {
            "single":{
                "bla": {
                    "umitools": {
                        "OPTIONS": [
                            {},
                            {
                                "--extract-method": "string",
                                "--bc-pattern": "AGANNNNACGT"
                            },
                            {
                                "--extract-umi-method": "read_id"
                            }
                        ]
                    }
                },
                "blubb":{
                    "umitools": {
                        "OPTIONS": [
                            {},
                            {
                                "--extract-method": "string",
                                "--bc-pattern": "AGANNNNACGT"
                            },
                            {
                                "--extract-umi-method": "read_id"
                            }
                        ]
                    }
                }
            }
        }
    },
