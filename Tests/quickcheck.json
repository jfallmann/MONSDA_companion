{
    "WORKFLOWS": "TRIMMING,MAPPING,DE",  # "QC, TRIMMING, MAPPING, DEDUP, TRACKS, PEAKS, DE, DEU, DAS",
    "VERSION": "1.1.0",
    "MAXTHREADS": "18",
    "BINS": "",
    "SETTINGS": {
        "Ecoli": {
            "single": {
                "test": {
                    "SAMPLES": [
                        "test", "ERR861947"
                    ],
                    "GROUPS": [
                        "IP"
                    ],
                    "TYPES": [
                        "test1_single"
                    ],
                    "BATCHES": [
                        "1", "2"
                    ],
                    "SEQUENCING": "single",
                    "REFERENCE": "GENOMES/Ecoli/ecoli.fa.gz",
                    "PREFIX": "idx",
                    "ANNOTATION": {
                        "GFF": "GENOMES/Ecoli/ecoli.gff.gz"
                        #"GTF": "GENOMES/Ecoli/dm6_chromfix.gtf.gz"
                    },
                    "IP": "iCLIP"
                }
            },
            "paired": {
                "SAMPLES": [
                    "blablub","SRR16581295"
                ],
                "GROUPS": [
                    "TWO"
                ],
                "TYPES": [
                    "test_paired"
                ],
                "BATCHES": [
                    "3"
                ],
                "SEQUENCING": "paired",
                "REFERENCE": "GENOMES/Ecoli/ecoli.fa.gz",
                "PREFIX": "idx",
                "ANNOTATION": {
                    "GFF": "GENOMES/Ecoli/ecoli.gff.gz"
                    #"GTF": "GENOMES/Ecoli/dm6_chromfix.gtf.gz"
                },
                "IP": "iCLIP"
            }
        }
    },
    "FETCH": {
        "TOOLS" :
        {
            "sra" : "fasterq-dump"
        },
        "Ecoli": {
            "single": {
                "test": {
                    "sra": {
                        "OPTIONS":
                        {
                        }
                    }
                }
            },
            "paired": {
                "sra": {
                    "OPTIONS":
                    {
                        "DOWNLOAD": ""
                    }
                }
            }
        }
    },
    "QC": {
        "TOOLS" :
        {
            "fastqc" : "fastqc"
        },
        "Ecoli": {
            "paired": {
                "fastqc": {
                    "OPTIONS":
                    {
                        "QC": "",  #QC options here if any, paired is not required, will be resolved by rules
                        "MULTI": ""  #MultiQC options here if any, paired is not required, will be resolved by rules
                    }
                }
            },
            "single": {
                "test": {
                    "fastqc": {
                        "OPTIONS":
                        {
                            "QC": "",  #QC options here if any, paired is not required, will be resolved by rules
                            "MULTI": ""  #MultiQC options here if any, paired is not required, will be resolved by rules
                        }
                    }
                }
            }
        }
    },
    "TRIMMING": {
        "TOOLS" :
        {
            "trimgalore": "trim_galore",
            "cutadapt": "cutadapt"
        },
        "Ecoli": {
            "paired": {
                "trimgalore":{
                    "OPTIONS":
                    {
                        "TRIM": "-q 15 --length 8 -e 0.15"  # trimming options here, --paired is not required, will be resolved by rules
                    }
                },
                "cutadapt":{
                    "OPTIONS":
                    {
                        "TRIM": "-m 8 -e 0.15"  # trimming options here, --paired is not required, will be resolved by rules
                    }
                }
            },
            "single": {
                "test": {
                    "trimgalore":{
                        "OPTIONS":
                        {
                            "TRIM": "-q 15 --length 8 -e 0.15"  # trimming options here, --paired is not required, will be resolved by rules
                        }
                    },
                    "cutadapt":{
                        "OPTIONS":
                        {
                            "TRIM": "-m 8 -e 0.15"  # trimming options here, --paired is not required, will be resolved by rules
                        }
                    }
                }
            }
        }
    },
    "DEDUP": {
        "TOOLS": {
            "umitools": "umi_tools",
            "picard": "picard"
        },
        "Ecoli": {
            "paired":{
                "umitools":{
                    "OPTIONS":
                    {
                        "EXTRACT": "--extract-method string --bc-pattern ANNNNA",
                        "DEDUP": "--extract-umi-method read_id"  # umitools dedup options
                    }
                },
               "picard":{
                    "OPTIONS":
                    {
                        "JAVA": "",
                        "DEDUP": "--VALIDATION_STRINGENCY LENIENT"# umitools dedup options
                    }
              }
            },
            "single":{
                "test": {
                    "umitools": {
                        "OPTIONS":
                        {
                            "EXTRACT": "--extract-method string --bc-pattern ANNNNA",
                            "DEDUP": "--extract-umi-method read_id"  # umitools dedup options
                        }
                    },
                   "picard": {
                     "OPTIONS":
                        {
                            "JAVA": "",
                            "DEDUP": "--VALIDATION_STRINGENCY LENIENT"# umitools dedup options
                        }
                    }
                }
            }
        }
    },
    "MAPPING": {
        "TOOLS": {
            #"bwa": "bwa mem",
            "star": "STAR"
            #"segemehl3": "segemehl.x",
            #"hisat2": "hisat2",
            #"minimap": "minimap2"
        },
        "Ecoli": {
            "single": {
                "test": {
                    "star": {
                        "OPTIONS": {
                            "INDEX": "--sjdbGTFfeatureExon CDS --sjdbGTFtagExonParentTranscript ID --genomeSAindexNbases 10",
                            "MAP": "--sjdbGTFfeatureExon CDS --sjdbGTFtagExonParentTranscript ID --outSAMprimaryFlag AllBestScore"
                        }
                    },
                    "segemehl3": {
                        "OPTIONS": {
                            "INDEX": "",
                            "MAP": "--MEOP --splits --accuracy 95 --differences 1 --evalue 5 --hitstrategy 1 --minsize 15 --minfraglen 20"
                        }
                    },
                    "hisat2": {
                        "OPTIONS":
                        {
                          "INDEX": ""
                        }
                    },
                    "bwa": {
                        "OPTIONS":
                        {
                            "INDEX": "-a bwtsw",
                            "MAP": ""
                        }
                    },
                    "minimap": {
                        "OPTIONS":
                        {
                            "INDEX": "-k 15",
                            "MAP": "-ax sr -ub -Y -L --MD"
                        }
                    }
                }
            },
            "paired": {
                "star": {
                    "OPTIONS":
                    {
                        "INDEX": "--sjdbGTFfeatureExon CDS --sjdbGTFtagExonParentTranscript ID --genomeSAindexNbases 13",
                        "MAP": "--sjdbGTFfeatureExon CDS --sjdbGTFtagExonParentTranscript ID --outSAMprimaryFlag AllBestScore"
                    }
                },
                "segemehl3": {
                    "OPTIONS": {
                        "INDEX":  "",
                        "MAP": "--MEOP --splits --accuracy 95 --differences 1 --evalue 5 --hitstrategy 1 --minsize 15 --minfraglen 20"
                    }
                },
                "hisat2": {
                    "OPTIONS":
                    {
                      "INDEX": ""
                    }
                },
                "bwa": {
                    "OPTIONS":
                    {
                        "INDEX": "-a bwtsw",
                        "MAP": ""
                    }
                },
                "minimap": {
                    "OPTIONS":
                    {
                        "INDEX": "-k 15",
                        "MAP": "-ax sr -ub -Y -L --MD"
                    }
                }
            }
        }
    },
    "COUNTING": {
        "FEATURES": {
            "exon": "gene_id",
            "gene": "gene_id"
        },
        "TOOLS": {
            "countreads": "featureCounts"
        },
        "Ecoli": {
            "single": {
                "test": {
                    "countreads": {
                        "OPTIONS":
                        {
                            "COUNT" : "-f --fraction -O -M"
                        }
                    }
                }
            },
            "paired": {
                "countreads": {
                    "OPTIONS":
                    {
                        "COUNT" : "-f --fraction -O -M"
                    }
                }
            }
        }
    },
    "TRACKS": {
        "TOOLS": {
            "ucsc": "ucsc"
        },
        "Ecoli": {
            "single": {
                "test": {
                    "ucsc": {
                        "OPTIONS":
                        {
                            "UCSC": "-n DM6_single_Mapping -s dm6_st -l UCSC_DM6_single_Mapping -b UCSC_dm6_star1"
                        }
                    }
                }
            },
            "paired": {
                "ucsc": {
                    "OPTIONS":
                    {
                        "UCSC": "-n DM6_paired_Mapping -s dm6_p -l UCSC_DM6_paired_Mapping -b UCSC_dm6_pstar1"
                    }
                }
            }
        }
    },
